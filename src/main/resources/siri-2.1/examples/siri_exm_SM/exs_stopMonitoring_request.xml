Interval>			<MonitoringRef>EH00001</MonitoringRef>			<OperatorRef>OPERATOR22</OperatorRef>			<LineRef>LINE77</LineRef>			<DirectionRef>OUTBOUND</DirectionRef>			<DestinationRef>PLACE98765</DestinationRef>			<StopVisitTypes>all</StopVisitTypes>			<!--=======POLICY======================================-->			<IncludeTranslations>true</IncludeTranslations>			<MaximumStopVisits>7</MaximumStopVisits>			<MinimumStopVisitsPerLine>2</MinimumStopVisitsPerLine>			<MaximumTextLength>20</MaximumTextLength>			<StopMonitoringDetailLevel>calls</StopMonitoringDetailLevel>			<IncludeSituations>true</IncludeSituations>		</StopMonitoringRequest>	</ServiceRequest></Siri>